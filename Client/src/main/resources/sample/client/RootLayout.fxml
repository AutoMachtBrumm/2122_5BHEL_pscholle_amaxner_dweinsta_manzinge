<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.DropShadow?>
<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.client.controller.RootLayoutController">
    <top>
        <AnchorPane prefHeight="30.0" prefWidth="800.0" style="-fx-background-color: #222;"
                    BorderPane.alignment="CENTER">
            <children>
                <Button id="btnExit" alignment="CENTER" layoutX="768.0" layoutY="1.0" mnemonicParsing="false"
                        onAction="#exit" prefHeight="30.0" prefWidth="30.0" text="X" textFill="WHITE"
                        AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="768.0" AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button id="btnHelp" alignment="CENTER" layoutX="14.0" layoutY="-1.0" mnemonicParsing="false"
                        onAction="#help" prefHeight="30.0" prefWidth="100.0" text="HELP" textFill="WHITE"
                        AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
            <effect>
                <DropShadow height="10.0" radius="2.0" width="0.0"/>
            </effect>
        </AnchorPane>
    </top>
</BorderPane>
