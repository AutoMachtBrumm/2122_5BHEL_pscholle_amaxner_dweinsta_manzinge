                    <children>
                        <Label text="CHOOSE BETWEEN THOSE TWO">
                            <font>
                                <Font name="Arial Italic" size="16.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="100.0">
                            <children>
                                <RadioButton mnemonicParsing="false" selected="true" text="TRUE" userData="1">
